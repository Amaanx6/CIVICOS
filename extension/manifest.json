{
  "manifest_version": 3,
  "name": "CIVICOS Verifier",
  "version": "1.0.0",
  "description": "AI-powered civic issue verification and fact-checking extension",
  "permissions": ["activeTab", "scripting", "storage", "geolocation"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon-16.jpg",
    "48": "icons/icon-48.jpg",
    "128": "icons/icon-128.jpg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CIVICOS Verifier - Verify civic claims"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
